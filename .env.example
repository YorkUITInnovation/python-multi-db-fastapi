APP_MODE=DEV
# Single API key example
API_KEY=changeme
# Multiple API keys example options (single-line only):
# JSON array of objects:
# API_KEYS=[{"name":"TeamA","key":"abc123"},{"name":"TeamB","key":"def456"}]
# JSON array of strings:
# API_KEYS=["abc123","def456"]
# Comma-separated strings:
# API_KEYS=abc123,def456

# Oracle Instant Client library path (required for thick mode to support older password verifiers)
# Install using: ./install_oracle_client.sh
# Default installation path: /opt/oracle/instantclient_21_15
ORACLE_CLIENT_LIB=/opt/oracle/instantclient_21_15

# Oracle (default single server)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=orclpdb1
ORACLE_USER=oracle_user
ORACLE_PASSWORD=oracle_password
# Optional: multiple Oracle servers (JSON object keyed by name)
# Using DSN connection strings (recommended for complex connections):
# ORACLE_CONFIGS={"production":{"dsn":"(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=prod.db)(PORT=1521))(CONNECT_DATA=(SERVER=DEDICATED)(SERVICE_NAME=proddb)))","user":"prod_user","password":"secret"},"reporting":{"dsn":"(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=rep.db)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=repdb)))","user":"rep_user","password":"secret"}}
# Or using individual parameters:
# ORACLE_CONFIGS={"erp":{"host":"erp.db","port":1521,"service_name":"orclpdb1","user":"erp_user","password":"secret"},"legacy":{"host":"legacy.db","port":1521,"service_name":"orcl","user":"legacy","password":"secret"}}

